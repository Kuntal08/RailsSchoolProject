<%= form_with(model: [:admin, @age], local: true) do |form| %>

  <% if @age.errors.any? %>
    <div id="error_explanation">
      <div class="head">
        <h2>
          <%= pluralize(@age.errors.count, "error") %> Prohibited
          this location from being saved:
        </h2>
      </div>
      <div class="error-list">
        <ul>
          <% @age.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="input-form">
    <div class="input-field">
      <%= form.label :classe_id %>
      <div class="input-section">
        <%= form.select :classe_id, Classe.all.collect { |c| [c.classe, c.id] } %>
      </div>
    </div>

    <div class="input-field">
      <%= form.label :date_as %><br>
      <div class="input-section">
        <%= form.date_field :date_as %>
      </div>
    </div>

    <div class="input-field">
      <%= form.label :date %><br>
      <div class="input-section input-group input-daterange">
        <%= form.date_field :date_from %>
        <div class="input-group-addon">to</div>
        <%= form.date_field :date_to %>
      </div>
      <%= javascript_pack_tag 'ages' %>
    </div>

    <div class="input-field">
      <%= form.label :age_from %><br>
      <div class="input-section">
        <%= form.number_field :age_from %>
      </div>
    </div>

    <div class="input-field">
      <%= form.label :age_to %><br>
      <div class="input-section">
        <%= form.number_field :age_to %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
