<h1>Listing Age Criteria</h1>
<div class="add-button">
  <%= link_to "Add New Age", new_admin_age_path %>
</div>
<table>
  <tr>
    <th>Class</th>
    <th>Date From</th>
    <th>Date To</th>
    <th>Age From</th>
    <th>Age To</th>
    <th>Date As On</th>
  </tr>

  <% @ages.each do |age| %>
    <tr>
      <td><%= Classe.find(age.classe_id).classe %></td>
      <td><%= age.date_from %></td>
      <td><%= age.date_to %></td>
      <td><%= age.age_from %></td>
      <td><%= age.age_to %></td>
      <td><%= age.date_as %></td>
      <td class="feature"><%= link_to 'Show', admin_age_path(age) %></td>
      <td class="feature"><%= link_to 'Edit', edit_admin_age_path(age) %></td>
      <td class="feature"><%= link_to 'Destroy', admin_age_path(age),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<div class="nav-back">
  <%= link_to 'Back', root_path %>
</div>
