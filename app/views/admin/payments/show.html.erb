<h2>Payment Details:</h2>
<div class="show_class">
  <div class="info">
    <div class="heading">
      <strong>Student:</strong>
    </div>
    <div class="data">
      <%= @payment.name %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Class:</strong>
    </div>
    <div class="data">
      <%= Classe.find(@payment.classe_id).classe %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Academic Year:</strong>
    </div>
    <div class="data">
      <%= @payment.academic_year %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Address:</strong>
    </div>
    <div class="data">
      <%= @payment.address %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Contact:</strong>
    </div>
    <div class="data">
      <%= @payment.contact %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Email:</strong>
    </div>
    <div class="data">
      <%= @payment.email %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Payment Mode:</strong>
    </div>
    <div class="data">
      <%= @payment.payment_mode %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Amount:</strong>
    </div>
    <div class="data">
      <%= @payment.amount %>
    </div>
  </div>
  <div class="info">
    <div class="heading">
      <strong>Payment Status:</strong>
    </div>
    <div class="data">
      <%= @payment.status %>
    </div>
  </div>
</div>

<div class="invoice">
  <%= link_to "Print Invoice", admin_payment_path(@payment, format: "pdf") %>
</div>

<div class="nav-back">
  <%= link_to 'Back', admin_payments_path %>
</div>
